							<a href="{{path('admin_user_delete',{'id':user.id})}}" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></a>
						</td>
					</tr>
					
				{% endfor %}
				
				</tbody>
			
			</table>
		
