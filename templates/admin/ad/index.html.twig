{% extends 'admin/base.html.twig' %}

{% block title %}Administration des annonces{% endblock %}

{% block body %}

	<div class="container-fluid px-5">

		<h1 class="my-4">Gestion des annonces</h1>
		
			<div class="row mx-3">
		
				<table class="table table-hover">

					<thead>

						<th>Id</th>
						<th>Titre</th>
						<th>Auteur</th>
						<th>RÃ©servations</th>
						<th>Note</th>
						<th>Actions</th>

					</thead>

					<tbody>

					{% for ad in pagination.data %}

						<tr class="table-light">
							<td>{{ad.id}}</td>
							<td>{{ad.title}}</td>
							<td>
								<img src="{{ad.author.avatar}}" alt="avatar de {{ad.author.fullName}}" class="img-fluid"><br><br>
								{{ad.author.fullName}}
							</td>
							<td class="text-center"><span class="text-dark">{{ad.bookings | length}}</span></td>
							<td class="text-center"><span class="text-dark">{{ad.averageratings | number_format(1,',',' ')}}</span></td>
							<td>
								<a href="{{path('admin_ads_edit',{'id': ad.id})}}" class="btn btn-primary btn-sm"><i class="fas fa-edit"></i></a>
							</td>
							<td>
								<a href="{{path('admin_ads_delete',{'id':ad.id})}}" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></a>
							</td>
						</tr>

					{% endfor %}

					</tbody>

				</table>
				
			</div>
		
		{{ pagination.display() }}
		
	</div>

{% endblock %}
