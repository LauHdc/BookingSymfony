{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des réservations{% endblock %}

{% block body %}

	<main class="container-fluid px-5">

		<h1 class="my-4">Gestion des réservations</h1>
		
			<div class="row mx-3">
		
				<table class="table table-hover">

					<thead>

						<th>Id</th>
						<th>Date</th>
						<th>Visiteur</th>
						<th>Annonce</th>
						<th>Date de début</th>
						<th>Date de fin</th>
						<th></th>
						<th></th>

					</thead>

					<tbody>

					{% for booking in pagination.data %}

						<tr class="table-light">
							<td>{{booking.id}}</td>
							<td>{{booking.createdAt | date('d/m/Y H:i')}}</td>
							<td>{{booking.booker.fullName}}</td>
							<td>{{booking.ad.title}}</td>
							<td>{{booking.startDate | date('d/m/Y')}}</td>
							<td>{{booking.endDate | date('d/m/Y')}}</td>
							<td>
								<a href="{{path('admin_booking_edit',{'id':booking.id})}}" class="btn btn-primary btn-sm"><i class="fas fa-edit"></i></a>
							</td>
							<td>
								<a href="{{path('admin_booking_delete',{'id':booking.id})}}" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></a>
							</td>
						</tr>

					{% endfor %}

					</tbody>

				</table>
				
			</div>
		
		{{ pagination.display() }}

	</main>

{% endblock %}
